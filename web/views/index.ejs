<!DOCTYPE html>
<html lang="ko">

<% include ./header.ejs %>

<body>
  <section id="title">
    <h1 class="title">
      <a href="https://okdevtv.com/" alt="okdevtv">
        <img src="https://okdevtv.com/images/logo.webp" alt="okdevtv" class="okdevtv-logo" />
      </a>
      <a href="javascript:window.scrollTo(0,0)">
        odevtube: <%= title %>
      </a>
    </h1>
    <p>Welcome to <%= title %>
    </p>
  </section>
  <% include ./search.ejs %>
  <% if (uri === 'kpop' ) { %>
  <section style="background-color: #FABE98; margin-bottom: 2.2rem; padding: 0.45rem;">
    ➡️ <a href="https://www.youtube.com/playlist?list=PLQu3_HfiL3GQnaFfT7CAfrWMyhoWL7khJ" title="2022 교차편집 모음 (2022 Stage mix playlist)" style="padding-left: 1rem;">2022 교차편집 모음 (2022 Stage mix playlist)</a>
  </section>
  <% } %>
  <ul id="list">
    <% list.forEach(video=> { %>
    <% include ./video.ejs %>
    <% }) %>
  </ul>
  <hr />
  <hr />
  <div class="pagination">
    <% if (currentPage > 1) { %>
    <a href="?page=1">First</a>
    <a href="?page=<%= currentPage - 1 %>">Previous</a>
    <% } %>

    <% for(let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
    <% if (i === currentPage) { %>
    <span class="current"><%= i %></span>
    <% } else { %>
    <a href="?page=<%= i %>"><%= i %></a>
    <% } %>
    <% } %>

    <% if (currentPage < totalPages) { %>
    <a href="?page=<%= currentPage + 1 %>">Next</a>
    <a href="?page=<%= totalPages %>">Last</a>
    <% } %>
  </div>
  <% include ./aside.ejs %>
  <hr />
  <hr />
  <hr />
  <hr />
</body>
<% include ./footer.ejs %>

</html>
