<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Video</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/admin.css">
  <style>
    /* 슬라이딩 메뉴 스타일 */
    .menu-toggle {
      position: fixed;
      left: 10px;
      top: 10px;
      z-index: 999;
      background: #333;
      color: white;
      border: none;
      padding: 10px;
      cursor: pointer;
    }

    .sliding-menu {
      position: fixed;
      left: -250px;
      top: 0;
      width: 250px;
      height: 100%;
      background: #333;
      transition: 0.3s;
      z-index: 998;
      padding-top: 60px;
    }

    .sliding-menu.open {
      left: 0;
    }

    .sliding-menu a {
      display: block;
      color: white;
      padding: 10px 15px;
      text-decoration: none;
    }

    .sliding-menu a:hover {
      background: #444;
    }

    /* 본문 조정 */
    body {
      padding-left: 20px;
    }
  </style>
</head>

<body>
  <button class="menu-toggle">☰</button>

  <nav class="sliding-menu">
    <a href="/admin">홈</a>
    <a href="/admin/channel">채널</a>
    <a href="/admin?c=kpop">K-pop</a>
    <a href="/admin?c=food">음식</a>
    <a href="/admin?c=dev&l=en">Dev (EN)</a>
    <a href="/admin">Dev (KO)</a>
  </nav>

  <h1>Admin Video</h1>
  <section>
    <% if (!user) { %>
    <p>Welcome! Please <a href="/login">log in</a>.</p>
    <% } else { %>
    <p>Hello, <%= user.username %>. <a href="/logout" title="">logout</a>. <a href="/profile">profile</a>.</p>
    <% } %>
  </section>
  <aside class="github">
    <span class="k"> | <a href="/admin?c=kpop" title="">kpop</a>
      | <a href="/admin?c=food" title="">food</a> |</span>
    <a href="/admin" title="korean">dev ko</a> |
    <a href="/admin?c=dev&l=en" title="english">dev en</a>
    <a href="https://github.com/kenu/odevtube" target="_blank">
      <img src="/images/github-mark.svg" class="github-logo" alt="fork in github"></a>
  </aside>

  <nav>
    <a href="/admin/channel">채널</a>
  </nav>
  <section>
    <h3>Latest videos</h3>
    <table class="videos">
      <thead>
        <th class="channel">channel</th>
        <th class="title">title</th>
        <th class="date">pub@</th>
        <th class="date">cre@</th>
        <th class="del">del</th>
      </thead>
      <tbody>
        <% videos.forEach(function(video) { %>
        <tr>
          <td><a href="<%= video.uri %>#<%= video.Channel.title %>" title="<%= video.Channel.title %>" target="_blank">
              <img src="<%= video.Channel.thumbnail %>" alt="" class="thumbnail">
              <%= video.Channel.title %>
            </a></td>
          <td><a href="<%= video.uri %>#<%= video.title %>" title="" target="_blank">
              <img src="<%= video.thumbnail %>" alt="" class="thumbnail">
              <%= video.title %>
            </a>
          </td>
          <td class="datecell">
            <%= video.pubdate %>
          </td>
          <td class="datecell">
            <%= video.credate %>
          </td>
          <td class="datecell">
            <a href="javascript:remove('<%= video.videoId %>')">x</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    </div>
    <div class="pagination-wrapper">
      <div class="pagination">
        <% if (currentPage> 1) { %>
        <a href="/admin?<%= area %>p=1" class="latest">Latest</a>
        <a href="/admin?<%= area %>p=<%= currentPage - 1 %>" class="prev">Prev</a>
        <% } %>
        <% for (let i=startPage; i <=endPage; i++) { %>
        <a href="/admin?<%= area %>p=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>">
          <%= i %>
        </a>
        <% } %>
        <% if (currentPage < totalPages) { %>
        <a href="/admin?<%= area %>p=<%= currentPage + 1 %>" class="next">Next</a>
        <a href="/admin?<%= area %>p=<%= totalPages %>" class="end">
          <%= totalPages %>
        </a>
        <% } %>
      </div>
    </div>
  </section>
  <script>
    // 슬라이딩 메뉴 토글 기능
    document.querySelector('.menu-toggle').addEventListener('click', function() {
      document.querySelector('.sliding-menu').classList.toggle('open');
    });

    function remove(videoId) {
      if (confirm('Are you sure?')) {
        fetch('/api/video', {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
            videoId
          }
        }).then(function(response) {
          if (response.ok) {
            location.reload();
          } else {
            alert('Something went wrong, please try again later.');
          }
        });
      }
    }
  </script>
</body>

</html>
