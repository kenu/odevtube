<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Video</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
  <h1>Admin Video</h1>
  <section>
    <% if (!user) { %>
    <p>Welcome! Please <a href="/login">log in</a>.</p>
    <% } else { %>
    <p>Hello, <%= user.username %>. <a href="/logout" alt="logout">logout</a>. <a href="/profile">profile</a>.</p>
    <% } %>
  </section>
  <section>
    <h3>Latest videos</h3>
    <table class="videos">
      <thead>
        <th class="channel">channel</th>
        <th class="title">title</th>
        <th class="date">pub@</th>
        <th class="date">cre@</th>
      </thead>
      <tbody>
        <% videos.forEach(function(video) { %>
        <tr>
          <td><a href="/#<%= video.Channel.title %>" title="<%= video.Channel.title %>" target="_blank">
              <img src="<%= video.Channel.thumbnail %>" alt="<%= video.Channel.title %>" class="thumbnail">
              <%= video.Channel.title %>
            </a></td>
          <td><a href="/#<%= video.title %>" title="<%= video.title %>" target="_blank">
              <img src="<%= video.thumbnail %>" alt="<%= video.title %>" class="thumbnail">
              <%= video.title %>
            </a>
          </td>
          <td class="datecell">
            <%= video.pubdate %>
          </td>
          <td class="datecell">
            <%= video.credate %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </section>
</body>

</html>
